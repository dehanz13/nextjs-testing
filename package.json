    "@types/jest": "27.4.0",
    "@types/node": "17.0.13",
    "@types/react": "17.0.38",
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "5.10.1",
    "eslint": "8.8.0",
    "eslint-config-next": "12.0.9",
    "eslint-plugin-jest": "26.0.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-testing-library": "5.0.4",
    "husky": "7.0.4",
    "jest": "27.4.7",
